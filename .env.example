#!/bin/sh

# Cloud provider
export TF_VAR_cloud_provider="proxmox"

# Proxmox API connection
export TF_VAR_pm_api_url="https://<proxmox-host>:8006/api2/json"
export TF_VAR_pm_password="<your-proxmox-password>"
export TF_VAR_api_token="<user@realm!tokenid=uuid>"

# SSH private key (keep format intact)
export TF_VAR_private_key="-----BEGIN OPENSSH PRIVATE KEY-----
<your-private-key>
-----END OPENSSH PRIVATE KEY-----"

# VM configuration
export TF_VAR_vm_name="<vm-name>"
export TF_VAR_vm_memory=3072
export TF_VAR_vm_cores=2
export TF_VAR_vm_disk_size=32
export TF_VAR_target_node="<target-node>"
export TF_VAR_template_id="<template-id>"

# VM login
export TF_VAR_vm_username="<vm-username>"
export TF_VAR_vm_password="<vm-password>"

# Tailscale authentication
export TF_VAR_tailscale_auth_key="<tailscale-auth-key>"

# K3s cluster connection
export TF_VAR_k3s_url="https://<k3s-server-ip>:6443"
export TF_VAR_k3s_token="<k3s-token>"

